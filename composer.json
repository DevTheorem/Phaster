{
    "name": "theodorejb/phaster",
    "description": "A library for quick RESTful APIs",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Theodore Brown",
            "email": "theodorejb@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "psr/http-message": "^1.1 || ^2.0",
        "shrikeh/teapot": "^2.3.1",
        "theodorejb/peachy-sql": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "psalm/plugin-phpunit": "^0.19",
        "vimeo/psalm": "^5.26"
    },
    "autoload": {
        "psr-4": {"theodorejb\\Phaster\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"theodorejb\\Phaster\\Test\\": "test/"}
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyze": "psalm",
        "test": "phpunit",
        "test-mssql": "phpunit --exclude-group mysql",
        "test-mysql": "phpunit --exclude-group mssql"
    }
}
